<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.detailnews.DetailFragment">

    <ImageView
        android:id="@+id/detailImage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/newsImage"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_launcher_background" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/detailTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/font_size_xxlarge"
        app:layout_constraintEnd_toEndOf="@id/detailImage"
        app:layout_constraintStart_toStartOf="@id/detailImage"
        app:layout_constraintTop_toBottomOf="@+id/detailImage"
        tools:text="@string/app_name" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/detailDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:textColor="@color/black"
        android:layout_marginStart="8dp"
        android:textSize="@dimen/font_size"
        app:layout_constraintEnd_toEndOf="@id/detailTitle"
        app:layout_constraintStart_toStartOf="@id/detailTitle"
        app:layout_constraintTop_toBottomOf="@id/detailTitle"
        tools:text="@string/app_name" />
</androidx.constraintlayout.widget.ConstraintLayout>